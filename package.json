{
  "name": "library-2025",
  "private": true,
  "version": "1.0.0",
  "description": "Library 2026 - Monorepo with Strapi backend",
  "scripts": {
    "dev:backend": "pnpm --filter backend dev",
    "build:backend": "pnpm --filter backend build",
    "start:backend": "pnpm --filter backend start",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev": "pnpm dev:backend",
    "backend:start": "pnpm --filter backend backend:start",
    "backend:stop": "pnpm --filter backend backend:stop",
    "backend:restart": "pnpm --filter backend backend:restart",
    "backend:reload": "pnpm --filter backend backend:reload",
    "backend:delete": "pnpm --filter backend backend:delete",
    "backend:logs": "pnpm --filter backend backend:logs",
    "backend:status": "pnpm --filter backend backend:status",
    "migrate": "node utils/migrate-strapi-data.js",
    "migrate:advanced": "node utils/migrate-strapi-data-advanced.js",
    "migrate:dry-run": "DRY_RUN=true node utils/migrate-strapi-data-advanced.js"
  },
