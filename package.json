{
  "name": "library-2025",
  "private": true,
  "version": "1.0.0",
  "description": "Library 2026 - Monorepo with Strapi backend",
  "scripts": {
    "dev:backend": "pnpm --filter backend dev",
    "build:backend": "pnpm --filter backend build",
    "start:backend": "pnpm --filter backend start",
    "dev:frontend": "pnpm --filter frontend dev",
    "build:frontend": "pnpm --filter frontend build",
    "dev": "pnpm dev:backend",
    "prestart:all": "npm run build:backend && npm run build:frontend",
    "start:all": "pm2 start ecosystem.config.js",
    "stop:all": "pm2 stop ecosystem.config.js",
    "restart:all": "pm2 restart ecosystem.config.js",
    "reload:all": "pm2 reload ecosystem.config.js",
    "delete:all": "pm2 delete ecosystem.config.js",
    "status:all": "pm2 status",
    "logs:all": "pm2 logs",
    "monit": "pm2 monit",
    "migrate": "node utils/migrate-strapi-data.js",
    "migrate:advanced": "node utils/migrate-strapi-data-advanced.js",
    "migrate:dry-run": "DRY_RUN=true node utils/migrate-strapi-data-advanced.js"
  },
  "author": {
    "name": "A Strapi developer"
  },
  "license": "MIT",
  "dependencies": {
    "pm2": "^6.0.14"
  }
}
